import React, {  ReactElement } from 'react';
import styled from 'styled-components';

import * as I from '..';

export default {
    title: 'Icons',
    parameters: {},
};

const Icons = styled.div`
    display: flex;
    flex-wrap: wrap;
    gap: 24px;

    & > * {
        margin-bottom: 24px;
    }
`;

export const AllCategoriesWithIconSizeVariants = (): ReactElement => (
    <>
      <% categories.forEach(function(category) { %>
        <h2><%- category.name %></h2>

        <% category.icons.forEach(function(icon) { %>
          <h3><%- icon %></h3>
          <Icons>
            <I.<%- icon %>Icon small />
            <I.<%- icon %>Icon medium />
            <I.<%- icon %>Icon large />
          </Icons>
        <% }); %>
      <% }); %>
    </>
);

