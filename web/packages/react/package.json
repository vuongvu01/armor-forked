{
    "name": "@deliveryhero/ui.react",
    "version": "0.0.0",
    "main": "build.cjs/index.js",
    "module": "build.esm/index.js",
    "typings": "build.cjs/index.d.ts",
    "files": [
        "build.esm/",
        "build.cjs/"
    ],
    "license": "UNLICENSED",
    "scripts": {
        "install-peers": "install-self-peers -- --ignore-scripts",
        "build": "yarn run build:esm; yarn run build:cjs",
        "build:esm": "rm -rf ./build.esm/*; tsc -p tsconfig.build.esm.json",
        "build:cjs": "rm -rf ./build.cjs/*; tsc -p ./tsconfig.build.cjs.json",
        "build:watch": "tsc -w -p ./tsconfig.build.cjs.json",
        "test": "jest -c ./jest/config.js --passWithNoTests",
        "test:watch": "jest -c ./jest/config.js --watch",
        "lint": "eslint ./src --ext .js,.ts,.jsx,.tsx",
        "lint:fix": "eslint ./src --fix --ext .js,.ts,.jsx,.tsx",
        "release": "./script/release.sh",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "dependencies": {},
    "repository": {
        "type": "git",
        "url": "git@github.com:deliveryhero/ui.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "devDependencies": {
        "@babel/core": "^7.8.6",
        "@storybook/addon-actions": "^5.3.14",
        "@storybook/addon-info": "^5.3.14",
        "@storybook/addon-links": "^5.3.14",
        "@storybook/addons": "^5.3.14",
        "@storybook/react": "^5.3.14",
        "@team-griffin/install-self-peers": "^1.1.1",
        "@testing-library/dom": "^6.13.0",
        "@testing-library/jest-dom": "^5.1.1",
        "@testing-library/react": "^9.4.1",
        "@testing-library/user-event": "^10.0.0",
        "@types/jest": "^25.1.3",
        "@types/react": "^16.9.23",
        "@types/react-dom": "^16.9.5",
        "@types/styled-components": "^5.0.1",
        "@typescript-eslint/eslint-plugin": "^2.21.0",
        "@typescript-eslint/parser": "^2.21.0",
        "babel-loader": "^8.0.6",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.18.3",
        "eslint-plugin-react-hooks": "^2.5.0",
        "jest": "^25.1.0",
        "react-docgen-typescript-loader": "^3.6.0",
        "react-dom": "^16.13.0",
        "ts-jest": "^25.2.1",
        "ts-loader": "^6.2.1",
        "typescript": "^3.8.2"
    },
    "peerDependencies": {
        "react": "^16.13.0",
        "styled-components": "^5.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
