{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es5",
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "experimentalDecorators": true,
        "lib": ["esnext.asynciterable", "esnext", "es2017", "es2015", "dom"],
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "baseUrl": "./src/",
        "outDir": "./build/",
        "declaration": true,
        "jsx": "react"



